<section class="container-fluid m-5">

            <!-- beginning of Our Rating section -->
            <div class="row bg-white border rounded py-2 mb-5">
                <div class="col-4">
                    <div class="row">
                        <div class="col-3">
                            {{Company Logo}}
                        </div>
                        <div class="col-9">
                            <h2>{{Company Name}}</h2>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        {{Company Location}}
                    </div>
                </div>
                <div class="col-8 center">
                    <p class="ourRating ">
                        Our Rating
                    </p>
                    <p class="rating center">
                        {{ourRating}}
                    </p>
                    <div class="row">
                        <div class="col-4">
                            <div class="text-decoration-underline">Safety Culture</div> <span
                                class="">{{totalSafetyCulture}}</span>
                        </div>
                        <div class="col-4">
                            <div class="text-decoration-underline">Safety Training</div> <span
                                class="">{{totalSafetyTraining}}</span>
                        </div>
                        <div class="col-4">
                            <div class="text-decoration-underline">Hazard Id</div> <span
                                class="">{{totalHazardId}}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="text-decoration-underline">Lead Emphasis</div> <span
                                class="">{{totalLeadEmphasis}}</span>
                        </div>
                        <div class="col-6">
                            <div class="text-decoration-underline">Safety Manager</div> <span
                                class="">{{totalSafetyManager}}</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="userRatings">
                <!-- beginning of member ratings list -->
                {{#each userReview}}
                <div class="row bg-light border rounded my-4 py-2">
                    <div class="col-3 border-end bg-light px-4">
                        <div class="row">
                            <h5>{{userName}}</h5>
                        </div>
                        <div class="row">
                            {{dateAdded}}
                        </div>
                    </div>
                    <div class="col-9">
                        <div class="row center">
                            <div class="col-4">
                                <div class="text-decoration-underline">Safety Culture</div> <span
                                    class="">{{userSafetyCulture}}</span>
                            </div>
                            <div class="col-4">
                                <div class="text-decoration-underline">Safety Training</div> <span
                                    class="">{{userSafetyTraining}}</span>
                            </div>
                            <div class="col-4">
                                <div class="text-decoration-underline">Hazard Id</div> <span
                                    class="">{{userHazardId}}</span>
                            </div>
                        </div>
                        <div class="row center">
                            <div class="col-6">
                                <div class="text-decoration-underline">Lead Emphasis</div> <span
                                    class="">{{userLeadEmphasis}}</span>
                            </div>
                            <div class="col-6">
                                <div class="text-decoration-underline">Safety Manager</div> <span
                                    class="">{{userSafetyManager}}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row bg-light border rounded my-4 py-2">
                    <div class="col-3 border-end bg-light px-4">
                        <div class="row">
                            <h5>{{userName}}</h5>
                        </div>
                        <div class="row">
                            {{dateAdded}}
                        </div>
                    </div>
                    <div class="col-9">
                        <div class="row center">
                            <div class="col-4">
                                <div class="text-decoration-underline">Safety Culture</div> <span
                                    class="">{{userSafetyCulture}}</span>
                            </div>
                            <div class="col-4">
                                <div class="text-decoration-underline">Safety Training</div> <span
                                    class="">{{userSafetyTraining}}</span>
                            </div>
                            <div class="col-4">
                                <div class="text-decoration-underline">Hazard Id</div> <span
                                    class="">{{userHazardId}}</span>
                            </div>
                        </div>
                        <div class="row center">
                            <div class="col-6">
                                <div class="text-decoration-underline">Lead Emphasis</div> <span
                                    class="">{{userLeadEmphasis}}</span>
                            </div>
                            <div class="col-6">
                                <div class="text-decoration-underline">Safety Manager</div> <span
                                    class="">{{userSafetyManager}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    <div class="row justify-content-center reportSubmit mt-4">
        <button type="submit" class="btn btn-secondary"><a href="https://www.osha.gov/pls/osha7/eComplaintForm.html">Report This Company</a></button>
    </div>
