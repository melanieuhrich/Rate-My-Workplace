<main class="d-flex justify-content-center mainBody">
    <div>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active link-secondary" id="signIn-tab" data-bs-toggle="tab"
                    data-bs-target="#signIn" type="button" role="tab" aria-controls="signIn" aria-selected="true">Sign
                    In</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link link-secondary" id="signUp-tab" data-bs-toggle="tab" data-bs-target="#signUp"
                    type="button" role="tab" aria-controls="signUp" aria-selected="false">Sign Up</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="signIn" role="tabpanel" aria-labelledby="signIn-tab">
                <div class="col">
                    <form>
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" id="username-login" placeholder="Username">
                            <label for="username-login" class="form-label">Username</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="password" class="form-control" id="password-login" placeholder="Password">
                            <label for="password-login" class="form-label" id="floating-password">Password</label>
                        </div>
                        <button type="submit" id="login-submit" class="btn btn-secondary">Log In</button>
                    </form>
                </div>
            </div>
            <div class="tab-pane fade" id="signUp" role="tabpanel" aria-labelledby="signUp-tab">
                <div class="col">
                    <form class="row g-3">
                        <div class="col-12 form-floating">
                            <input type="text" class="form-control" id="user-signup" placeholder="Username">
                            <label for="user-signup" class="form-label">Username</label>
                        </div>
                        <div class="col-12 form-floating">
                            <input type="email" class="form-control" id="email-signup" placeholder="Email">
                            <label for="email-signup" class="form-label">Email</label>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input type="password" class="form-control" id="password-signup" placeholder="Password">
                            <label for="password-signup" class="form-label">Password</label>
                        </div>
                        <div class="col-md-6 form-floating">
                            <input type="password" class="form-control" id="passCon-signup" placeholder="P  assword">
                            <label for="passCon-signup" class="form-label">Confirm Password</label>
                        </div>
                        <div class="col-12">
                            <button type="submit" id="signup-submit" class="btn btn-primary">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>